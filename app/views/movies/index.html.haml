%h1 All Movies

%table#movies
  %thead
    %tr
      - 
      %th{class: ("hilite" if @sort == :title)}= link_to "Movie Title", params.permit.merge(sort: :title)
      %th Rating
      %th{class: ("hilite" if @sort == :release_date)}= link_to "Release Date", params.permit.merge(sort: :release_date)
      %th Action
    %tbody
      - @movies.each do |movie|
        %tr
          %td
            %em= movie.title
          %td= movie.rating
          %td= movie.release_date
          %td
            = button_to "Info", movie_path(movie), method: :get
            = button_to "Edit", edit_movie_path(movie.id), method: :get
            = button_to "Delete", movie_path(movie.id), method: :delete
= button_to 'Add new movie', new_movie_path, method: :get
